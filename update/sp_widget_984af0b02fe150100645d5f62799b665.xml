          <input type="checkbox"  ng-model="c.supervisor" ng-disabled="c.disable_cb" ng-checked="c.shift_cb">
          <span class="checkmark"></span>
        </label>
      </div>
          <div class="row" ng-if="!data.logonDetails.isLogon">   
